@{
    ViewData["Title"] = "Categories";
}
<h1 class="text-center">Shop our Store</h1>
<a asp-controller="Categories" asp-action="Create">Add a new category</a>
<ul>
    @foreach (var category in Model) {
        <li><a asp-controller="Categories" asp-action="Browse" asp-route-category="@category.Name">@category.Name</a></li>
    }
