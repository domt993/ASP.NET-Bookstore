@model IEnumerable<ASP.NET_Bookstore.Models.Book>

@{
    ViewData["Title"] = "Home Page";
}

<div class="hero-section">
    <div class="container">
        <h1 class="display-3 fw-bold mb-3">
            <i class="bi bi-book-half"></i> Welcome to DotNet Bookstore
        </h1>
        <p class="lead mb-4">Discover your next great read. Browse, search, and buy books online!</p>
        <a href="/Books" class="btn btn-lg btn-light shadow">Browse All Books</a>
    </div>
</div>

<div class="container featured-books">
    <h2 class="mb-4 text-center">Featured Books</h2>
    <div class="row justify-content-center">
        @if (Model != null && Model.Any())
        {
            foreach (var book in Model)
            {
                <div class="col-md-3 col-sm-6 mb-4">
                    <div class="card h-100 shadow-sm">
                        <img src="~/images/books/@(book.Image ?? "bookcover-placeholder.jpg")" class="card-img-top" alt="@book.Title" />
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@book.Title</h5>
                            <p class="card-text text-muted mb-1">@book.Author</p>
                            <p class="card-text fw-bold mb-2">@book.Price.ToString("C")</p>
                            <a href="/Books/Details/@book.BookId" class="btn btn-outline-primary mt-auto">View Details</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center">
                <p>No featured books available at the moment.</p>
            </div>
        }
    </div>
</div>