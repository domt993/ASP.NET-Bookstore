@model IEnumerable<ASP.NET_Bookstore.Models.Category>

@{
	// Setting the title, description, and keywords for the Shop page
	ViewData["Title"] = "Shop - ASP.NET Bookstore";
	ViewData["Description"] = "Browse our collection of books available for purchase. Find your next great read today!";
	ViewData["Keywords"] = "books, bookstore, shop, buy books, online bookstore";
}

<h1>Shop our Store</h1>
<section class="row card-group">
	@foreach (var c in Model)
	{
		<div class="col-sm-6 col-lg-4 mb-3">
			<div class="card mb-4 text-center h-100">
				<div class="card-body">
					<a asp-controller="Shop" asp-action="ShopByCategory" asp-route-id="@c.CategoryId">@c.Name</a>
				</div>
			</div>
		</div>
	}
</section>